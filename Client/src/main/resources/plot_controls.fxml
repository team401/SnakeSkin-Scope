<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.snakeskin.scope.client.controller.PlotControlsController">
   <children>
      <TitledPane animated="false" collapsible="false" layoutX="10.0" layoutY="10.0" text="Plots" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
               <content>
                  <AnchorPane>
                     <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox fx:id="plotListVbox">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </VBox>
                              <HBox alignment="TOP_CENTER">
                                 <children>
                                    <Label text="Add:">
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                                       </padding>
                                    </Label>
                                    <Button mnemonicParsing="false" onAction="#onAddNumeric" text="Numeric">
                                       <HBox.margin>
                                          <Insets right="10.0" top="15.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button mnemonicParsing="false" text="Boolean">
                                       <HBox.margin>
                                          <Insets right="10.0" top="15.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button mnemonicParsing="false" text="Pose">
                                       <HBox.margin>
                                          <Insets top="15.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
         </content>
      </TitledPane>
   </children>
</AnchorPane>
